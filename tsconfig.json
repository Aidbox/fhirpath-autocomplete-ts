{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ESNext",
    "rootDir": "src",
    "strict": false, // TODO enable this later
    "target": "ES2020",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
